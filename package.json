{
  "name": "@smikitky/maron",
  "version": "4.2.0",
  "description": "Helper for writing articles with markdown",
  "main": "./index.js",
  "bin": {
    "maron": "./index.js"
  },
  "engines": {
    "node": ">=24.5"
  },
  "type": "module",
  "scripts": {
    "test": "node --test src/*.test.ts",
    "prepublishOnly": "npm run build",
    "build": "npm run build:js && npm run build:dts && npm run build:assets",
    "build:js": "tsup",
    "build:dts": "tsgo -p ./tsconfig.build.json",
    "build:assets": "cp src/*.css src/*.html lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikitky/maron.git"
  },
  "author": "Soichiro Miki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikitky/maron/issues"
  },
  "homepage": "https://github.com/smikitky/maron#readme",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.7",
    "cac": "^6.7.14",
    "capitalize-title": "^1.0.0",
    "cheerio": "^1.1.2",
    "chokidar": "^5.0.0",
    "extend": "^3.0.2",
    "get-port": "^7.1.0",
    "glob": "^13.0.0",
    "handlebars": "^4.7.8",
    "hono": "^4.10.8",
    "js-yaml": "^4.1.1",
    "markdown-it": "^14.1.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-include": "^2.0.0",
    "markdown-it-named-headings": "^1.1.0",
    "picocolors": "^1.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/extend": "^3.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.10.2",
    "@typescript/native-preview": "^7.0.0-dev.20251210.1",
    "tsup": "^8.2.4",
    "typescript": "^5.9.3"
  }
}
