{
  "name": "@smikitky/maron",
  "version": "4.0.0-alpha.2",
  "description": "Helper for writing articles with markdown",
  "main": "./index.js",
  "bin": {
    "maron": "./index.js"
  },
  "engines": {
    "node": ">=24.5"
  },
  "type": "module",
  "scripts": {
    "test": "node --test src/*.test.ts",
    "prepublishOnly": "npm run build",
    "build": "npm run build:js && npm run build:dts && npm run build:assets",
    "build:js": "rimraf ./lib && tsup",
    "build:dts": "tsc -p ./tsconfig.build.json",
    "build:assets": "cp src/*.css src/*.html lib",
    "clean": "rimraf ./lib"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikitky/maron.git"
  },
  "author": "Soichiro Miki",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikitky/maron/issues"
  },
  "homepage": "https://github.com/smikitky/maron#readme",
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "trailingComma": "none"
  },
  "dependencies": {
    "capitalize-title": "^1.0.0",
    "chalk": "^5.6.2",
    "cheerio": "^1.1.2",
    "chokidar": "^5.0.0",
    "concat-stream": "^2.0.0",
    "dashdash": "^2.0.0",
    "extend": "^3.0.2",
    "get-port": "^5.1.1",
    "glob": "^8.0.3",
    "handlebars": "^4.7.7",
    "indent-string": "^4.0.0",
    "js-yaml": "^4.1.0",
    "koa": "^2.13.4",
    "koa-static": "^5.0.0",
    "markdown-it": "^13.0.1",
    "markdown-it-attrs": "^4.1.4",
    "markdown-it-include": "^2.0.0",
    "markdown-it-named-headings": "^1.1.0"
  },
  "devDependencies": {
    "@types/concat-stream": "^2.0.0",
    "@types/dashdash": "^1.14.1",
    "@types/extend": "^3.0.1",
    "@types/glob": "^7.2.0",
    "@types/indent-string": "^4.0.1",
    "@types/js-yaml": "^4.0.5",
    "@types/koa": "^2.13.4",
    "@types/koa-static": "^4.0.2",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^24.10.2",
    "rimraf": "^6.1.2",
    "tsup": "^8.2.4",
    "typescript": "^5.9.3"
  }
}
